<h1>Listing users</h1>

<table>
  <tr>
    <th>Имя</th>
    <th>E-mail</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Показать', user %></td>
    <td><%= link_to 'Редактировать', edit_user_path(user) %></td>
    <td><%= link_to 'Удалить', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

